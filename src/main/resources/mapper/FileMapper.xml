<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!-- namespace为命名空间，应该是mapper接口的全称-->
<mapper namespace="com.loivgehoto.disk.Mapper.FileMapper">



    <!--    将文件移至回收站-->
    <select id="move_file_to_recycle_bin">
        INSERT INTO bin (user_name,file_name,source_file_path) VALUES(#{user_name},#{file_name},#{source_file_path});
    </select>

    <select id="delete_file_completely">
        DELETE from bin where file_name=#{file_name} and user_name=#{user_name};
    </select>

    <select id="restore_file_get_file_source_path" resultType="String">
        select source_file_path from bin where file_name=#{file_name} and user_name=#{user_name};
    </select>

    <select id="save_shared_file" >
        INSERT INTO share (user_name, file_name, file_path, uuid, file_size, create_time, suffix,password) VALUES(#{user_name},#{file_name},#{file_path},#{uuid},#{file_size},#{create_time},#{suffix},#{password});
    </select>



    <resultMap id="BaseResultMap" type="com.loivgehoto.disk.Model.Shared">
        <result column="file_name" property="file_name" />
        <result column="file_path" property="file_path"/>
        <!--        <result column="uuid" property="uuid" />-->
        <result column="file_size" property="file_size"/>
        <result column="user_name" property="user_name"/>
        <!--        <result column="suffix" property="suffix" />-->
        <result column="create_time" property="create_time"/>
        <result column="suffix" property="suffix" />
        <result column="password" property="password" />
    </resultMap>

    <select id="shared_page" resultMap="BaseResultMap">
        select * from share  where  uuid = #{uuid};
    </select>

    <select id="check_share_password" resultMap="BaseResultMap">
        select * from share  where  uuid = #{uuid} and password=#{password};
    </select>
    <select id="check_share_password_is_exit" resultType="String">
        select password from share  where  uuid = #{uuid};
    </select>


    <select id="share_management_page" resultMap="BaseResultMap">
        select * from share  where  user_name = #{user_name};
    </select>

    <select id="cancel_share">
        DELETE from share  where file_path = #{file_path};
    </select>

