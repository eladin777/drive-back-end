    <!--    将文件夹移至回收站-->
    <select id="From_rootFolder_to_recycle_bin_folder" >
        INSERT INTO bin (file_name,user_name,file_path,file_suffix,create_time) VALUES(#{file_name},#{user_name},#{file_path},#{file_suffix},#{create_time});
    </select>



    <select id="SearchAllFile_in_recycle_bin" resultType="com.loivgehoto.disk.Model.File"><!--    order by file_name按文件名称对文件进行排序-->
        select  * from bin where user_name=#{user_name} and file_suffix!='folder'
    </select>

    <select id="SearchAllFolder_in_recycle_bin" resultType="com.loivgehoto.disk.Model.File"><!--    order by file_name按文件名称对文件进行排序-->
        select  * from bin where user_name=#{user_name} and file_suffix='folder'
    </select>







    <select id="From_recycle_bin_to_rootFolder" ><!--当上传一个新的文件和回收站里的文件重名,要怎么处理,待解决-->
        update file set in_recycle_bin=0 where file_name=#{file_name};
    </select>



    <select id="share">
        insert into share_file (file_name,user_name,file_path,share_url,file_size,create_time,file_suffix) value (#{file_name},#{user_name},#{file_path},#{share_url},#{file_size},#{create_time},#{file_suffix});
    </select>
    <select id="share_folder">
        insert into share_file (file_name,user_name,file_path,share_url,file_size,create_time,file_suffix) value (#{file_name},#{user_name},#{file_path},#{share_url},0,#{create_time},#{file_suffix});
    </select>


    <select id="cancel_share" >
        DELETE from share_file where share_url=#{share_url}
    </select>



